<div class="border-2 my-2 p-1 rounded border-violet-900"
     draggable="true"
     data-one-dimension-target="task"
     data-action="dragstart->one-dimension#dragStart
                  dragover->one-dimension#dragOver
                  drop->one-dimension#Drop
                  dragend->one-dimension#dragEnd"
     id="<%= "#{task.id}" %>">
	<%= form.hidden_field(:chosen_id, data: {target: "chosen"}) %>
	<%= form.hidden_field(:dropped_id, data: {target: "dropped"}) %>
	<h2><%= task.name %></h2>
	<p><%= task.id %></p>
</div>